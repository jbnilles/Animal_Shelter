
@{
  Layout = "_Layout";
}
@using AnimalShelter.Models;
<div class="container">
  @if(Model.Count == 0)
  {
    <h1>There are no animal types yet</h1>
  }
  @foreach (AnimalShelter.Models.Type t in Model)
  {
      <p>@t.AnimalType</p>
  }
  <p>@Html.ActionLink("Add an AnimalType", "Create", "Types")</p>
  <p>@Html.ActionLink("View/add Animals", "Index", "Animals")</p>
</div>
