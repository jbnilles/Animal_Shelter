@{
  Layout = "_Layout";
}
@using AnimalShelter.Models;
<div class="container">
  @if(Model.Count == 0) 
  {
    <h1>There are no animals yet</h1>
  }
  <ul>
    
  @foreach (Animal a in Model)    
  {

      <li>@a.Name</li>
      <ul>
        <li>@a.Breed</li>
        <li>@a.Gender</li>
        <li>@a.DateAdmitted</li>
        <li>@a.Type</li>
      </ul>
  }
  </ul>
  <p>@Html.ActionLink("Add an Animal", "Create", "Animals")</p>
  <p>@Html.ActionLink("Sort by Name", "SortByName", "Animals")</p>
  <p>@Html.ActionLink("View unsorted", "Index", "Animals")</p>
  
  
</div>
